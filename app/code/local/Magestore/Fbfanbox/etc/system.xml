<?xml version="1.0"?>
<config>
    <tabs>
        <magestore translate="label">
            <label>Magestore Extension</label>
            <sort_order>400</sort_order>
        </magestore>
    </tabs>
    <sections>
        <fbfanbox translate="label" module="fbfanbox">
            <class>separator-top</class>
            <label>FBFanBox</label>
            <tab>magestore</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>				<general translate="label">                    <label>FBFanBox Configuration</label>                    <frontend_type>text</frontend_type>                    <sort_order>1</sort_order>                    <show_in_default>1</show_in_default>                    <show_in_website>1</show_in_website>                    <show_in_store>0</show_in_store>                    <fields>
						<enable translate="label">
                            <label>Enable FBFanBox</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
											<fb_page_id translate="label">                             <label>Facebook Page ID</label>                            <frontend_type>text</frontend_type>                                                        <sort_order>2</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>							<comment>ID of Facebook page or Facebook application</comment>                        </fb_page_id>												<box_width translate="label">                            <label>Width of the box in pixel</label>                            <frontend_type>text</frontend_type>                                                        <sort_order>3</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>							<comment>Width of the box in pixel</comment>                        </box_width>
						
						<box_height translate="label">
                            <label>Height of the box in pixel</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Height of the box in pixel</comment>
                        </box_height>
						
						<connection translate="label">
                            <label>Connections</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Show a sample of this many users who have liked this page</comment>
                        </connection>
						
						<stream translate="label">
                            <label>Streams</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Show the profile stream for the public profile</comment>
                        </stream>
						
						<header translate="label">
                            <label>Header</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Show the 'find us on Facebook' bar at top</comment>
                        </header>					</fields>					</general>							
            </groups>
        </fbfanbox>        
    </sections>
</config>