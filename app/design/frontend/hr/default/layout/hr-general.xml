<?xml version="1.0" encoding="UTF-8"?>

<layout version="0.1.0">
    <default>
        <remove name="breadcrumbs"></remove>
        <remove name="catalog.compare.sidebar"></remove>
        <remove name="right.permanent.callout"></remove>
        <remove name="right.poll"></remove>
        <remove name="right.reports.product.viewed"></remove>
        <remove name="left.reports.product.viewed"></remove>
        <remove name="right.reports.product.compared"></remove>
        <remove name="left.permanent.callout"></remove>
        <remove name="sale.reorder.sidebar"></remove>
        <remove name="product_tag_list"></remove>
        <remove name="catalog.product.related"></remove>
        <remove name="product.info.addto"></remove>
        <remove name="product.attributes"></remove>
        <remove name="product.info.simple"></remove>
        <remove name="checkout.cart.coupon"></remove>
        <remove name="checkout.cart.crosssell"></remove>
        <remove name="checkout.cart.methods.multishipping"></remove>
        <remove name="footer_links"></remove>
        <remove name="cart_sidebar"></remove>
        <remove name="paypal.partner.right.logo"></remove>
        <remove name="store_switcher"></remove>

        <reference name="header">
        	<action method="unsetChild"><name>store_language</name></action>
        	<action method="unsetChild"><name>topLinks</name></action>
        </reference>
        
        <reference name="catalog.topnav">
        	<block type="page/template_links" name="top.links" as="topLinks" />
        	<block type="core/template" name="top.search" as="topSearch" template="catalogsearch/form.mini.phtml"/>
        </reference>
        
        <reference name="before_body_end">
			<block type="page/html_footermenu" name="footer.menu" template="page/html/footer.menu.phtml">
				<block type="page/template_links" name="footer.links" />
				<block type="newsletter/subscribe" name="left.newsletter" template="newsletter/subscribe.phtml" />
			</block>
        </reference>

    </default>
    
    <customer_logged_in>
		<reference name="top.links">
			<action method="removeLinkByUrl"><url helper="customer/getLogoutUrl"/></action>
			<action method="addLink" translate="label"><label>My Cart</label><url helper="checkout/cart/getCartUrl"/></action>
		</reference>
		<reference name="footer.links">
			<action method="addLink" translate="label"><label>My Account</label><url helper="customer/getAccountUrl"/></action>
			<action method="addLink" translate="label title" module="customer"><label>Log Out</label><url helper="customer/getLogoutUrl"/><title>Log Out</title><prepare/><urlParams/><position>100</position></action>
		</reference>
	</customer_logged_in>
    
	<customer_logged_out>
		<reference name="top.links">
			<action method="removeLinkByUrl"><url helper="customer/getLoginUrl"/></action>
			<action method="addLink" translate="label"><label>My Cart</label><url helper="checkout/cart/getCartUrl"/></action>
		</reference>
		<reference name="footer.links">
			<action method="addLink" translate="label title" module="customer"><label>My Account</label><url helper="customer/getLoginUrl"/><title>Connectez-vous</title><prepare/><urlParams/><position>100</position></action>
			<action method="addLink" translate="label"><label>Connexion</label><url helper="customer/getRegisterUrl"/><title>Connexion</title><prepare/><urlParams /><position/><liParams>id="register-box"</liParams><aParams>id="login-link"</aParams></action>
		</reference>
		<reference name="footer.menu">
			<block type="hr-customer/form_login" name="hr.footer.form.login" template="customer/form/mini.login.phtml"/>
		</reference>
	</customer_logged_out>
    	
    <customer_account>
        <reference name="left">
            <action method="unsetChild"><name>customer_account_navigation</name></action>
            <block type="customer/account_navigation" name="customer_account_navigation" before="-" template="customer/account/navigation.phtml">
                <action method="addLink" translate="label" module="customer"><name>account</name><path>customer/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="customer"><name>account_edit</name><path>customer/account/edit/</path><label>Account Information</label></action>
                <!--<action method="addLink" translate="label" module="customer"><name>address_book</name><path>customer/address/</path><label>Address Book</label></action>-->
            	<action method="addLink" translate="label" module="newsletter"><name>newsletter</name><path>newsletter/manage/</path><label>Newsletter Subscriptions</label></action>
            	<action method="addLink" translate="label" module="sales"><name>orders</name><path>sales/order/history/</path><label>My Orders</label></action>
            </block>
            <remove name="right.newsletter"></remove>
        </reference>
    </customer_account>

    <contacts_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
	</contacts_index_index>

	<catalog_product_view>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="product.info.upsell">
        	<action method="setColumnCount"><columns>3</columns></action>
        	<action method="setItemLimit"><type>upsell</type><limit>2</limit></action>
        </reference>
       	<remove name="product.info.additional"></remove>
       	<remove name="product_tag_list"></remove>
	</catalog_product_view>
</layout>
