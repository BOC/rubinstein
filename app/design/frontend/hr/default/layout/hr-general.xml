<?xml version="1.0" encoding="UTF-8"?>

<layout version="0.1.0">
    <default>
        <remove name="breadcrumbs"></remove>
        <remove name="catalog.compare.sidebar"></remove>
        <remove name="right.permanent.callout"></remove>
        <remove name="right.poll"></remove>
        <remove name="right.reports.product.viewed"></remove>
        <remove name="left.reports.product.viewed"></remove>
        <remove name="right.reports.product.compared"></remove>
        <remove name="left.permanent.callout"></remove>
        <remove name="sale.reorder.sidebar"></remove>
        <remove name="product_tag_list"></remove>
        <remove name="catalog.product.related"></remove>
        <remove name="product.info.addto"></remove>
        <remove name="product.attributes"></remove>
        <remove name="product.info.simple"></remove>
        <remove name="checkout.cart.coupon"></remove>
        <remove name="checkout.cart.crosssell"></remove>
        <remove name="checkout.cart.methods.multishipping"></remove>
        <remove name="footer"></remove>
        <remove name="cart_sidebar"></remove>
        <remove name="paypal.partner.right.logo"></remove>
        <remove name="store_switcher"></remove>
        <remove name="top.links"></remove>

        <reference name="header">
        	<action method="unsetChild"><name>store_language</name></action>
        </reference>
        
        <reference name="catalog.topnav">
        	<block type="core/template" name="top.search" as="topSearch" template="catalogsearch/form.mini.phtml"/>
        	<block type="page/html_header_menu" name="header.menu" template="page/html/header/menu.phtml"/>
        </reference>
        
        <reference name="before_body_end">
			<block type="page/html_footer_menu" name="footer.menu" template="page/html/footer/menu.phtml">
				<block type="page/html_footer_box" name="footerbox" template="page/template/footerbox.phtml"/>
				<block type="newsletter/subscribe" name="left.newsletter" template="newsletter/subscribe.phtml" />
			</block>
        </reference>
    </default>
    
    <customer_logged_in>
		<reference name="footerbox">
			<block type="hr-customer/footer_menu" name="hr.footer.customer" template="customer/footer/menu.phtml"/>
		</reference>
		<reference name="header.menu">
			<block type="hr-checkout/header_cart" name="header.cart" as="headerCart" template="checkout/header.cart.phtml" />
		</reference>
	</customer_logged_in>
    
	<customer_logged_out>
		<reference name="top.links">
			<action method="removeLinkByUrl"><url helper="customer/getLoginUrl"/></action>
			<action method="addLink" translate="label"><label>My Cart</label><url helper="checkout/cart/getCartUrl"/></action>
		</reference>
		<reference name="footer.menu">
			<block type="hr-customer/form_login" name="hr.footer.form.login" template="customer/form/mini.login.phtml"/>
		</reference>
		<reference name="footerbox">
			<block type="hr-customer/form_login" name="hr.footer.customer" template="customer/form/mini.login.phtml"/>
		</reference>
	</customer_logged_out>
    	
    <customer_account>
    	<remove name="my.account.wrapper"></remove>
        <reference name="left">
            <action method="unsetChild"><name>customer_account_navigation</name></action>
            <block type="customer/account_navigation" name="customer_account_navigation" before="-" template="customer/account/navigation.phtml">
                <action method="addLink" translate="label" module="customer"><name>account</name><path>customer/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="customer"><name>account_edit</name><path>customer/account/edit/</path><label>Account Information</label></action>
                <!--<action method="addLink" translate="label" module="customer"><name>address_book</name><path>customer/address/</path><label>Address Book</label></action>-->
            	<action method="addLink" translate="label" module="newsletter"><name>newsletter</name><path>newsletter/manage/</path><label>Newsletter Subscriptions</label></action>
            	<action method="addLink" translate="label" module="sales"><name>orders</name><path>sales/order/history/</path><label>My Orders</label></action>
            </block>
            <remove name="right.newsletter"></remove>
        </reference>
    </customer_account>
    
	<customer_account_index translate="label">
		<reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <label>Customer My Account Dashboard</label>
        <update handle="customer_account"/>
        <!-- Mage_Customer -->
        <reference name="content">
	    <block type="page/html_wrapper" name="my.account.dashboard">
            <block type="customer/account_dashboard" name="customer_account_dashboard" template="customer/account/dashboard.phtml">
                <block type="customer/account_dashboard_hello" name="customer_account_dashboard_hello" as="hello" template="customer/account/dashboard/hello.phtml"/>
                <block type="core/template" name="customer_account_dashboard_top" as="top"></block>
                <block type="hr-customer/account_dashboard_item" name="dashboard_informations" template="customer/account/dashboard/item.phtml">
                	<action method="setItemTitle" translate="title"><title>Your Informations</title></action>
                	<action method="setItemImage"><image>informations.png</image><alt>informations</alt></action>
                	<action method="setItemContent" translate="text"><text>Manage your informations and your Helena Rubinstein account password</text></action>
                	<action method="setItemLink" translate="link"><link>Your Informations</link></action>
                </block>
                <block type="hr-customer/account_dashboard_item" name="dashboard_orders" template="customer/account/dashboard/item.phtml">
                	<action method="setItemTitle" translate="title"><title>Your Orders</title></action>
                	<action method="setItemImage"><image>orders.png</image><alt>orders</alt></action>
                	<action method="setItemContent" translate="content"><text>[!CDATA[Manage your informations and your Helena Rubinstein account password]]</text></action>
                	<action method="setItemLink" translate="link"><link>Your Orders</link></action>
                </block>
                <block type="hr-customer/account_dashboard_item" name="dashboard_diagnostic" template="customer/account/dashboard/item.phtml">
                	<action method="setItemTitle" translate="title"><title>Your Diagnostic</title></action>
                	<action method="setItemImage"><image>diagnostic.png</image><alt>diagnostic</alt></action>
                	<action method="setItemContent" translate="text"><text>Manage your informations and your Helena Rubinstein account password</text></action>
                	<action method="setItemLink" translate="link"><link>Your Diagnostic</link></action>
                </block>
                <block type="hr-customer/account_dashboard_item" name="dashboard_newsletter" template="customer/account/dashboard/item.phtml">
                	<action method="setItemTitle" translate="title"><title>Your Newsletter</title></action>
                	<action method="setItemImage"><image>newsletter.png</image><alt>newsletter</alt></action>
                	<action method="setItemContent" translate="text"><text>Manage your informations and your Helena Rubinstein account password</text></action>
                	<action method="setItemLink" translate="link"><link>Your Newsletter</link></action>
                </block>
                <block type="hr-customer/account_dashboard_item" name="dashboard_community" template="customer/account/dashboard/item.phtml">
                	<action method="setItemTitle" translate="title"><title>The HR Community</title></action>
                	<action method="setItemImage"><image>community.png</image><alt>community</alt></action>
                	<action method="setItemContent" translate="text"><text>Manage your informations and your Helena Rubinstein account password</text></action>
                	<action method="setItemLink" translate="link"><link>Discover</link></action>
                </block>
            </block>
        </block>
        </reference>
    </customer_account_index>
    
    <contacts_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
	</contacts_index_index>

	<catalog_product_view>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="product.info.upsell">
        	<action method="setColumnCount"><columns>3</columns></action>
        	<action method="setItemLimit"><type>upsell</type><limit>2</limit></action>
        </reference>
       	<remove name="product.info.additional"></remove>
       	<remove name="product_tag_list"></remove>
	</catalog_product_view>
</layout>
